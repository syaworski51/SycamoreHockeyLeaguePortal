@model IEnumerable<SycamoreHockeyLeaguePortal.Models.Team>
@inject SycamoreHockeyLeaguePortal.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "Teams";
}

<h1>@ViewBag.Title</h1>

<div class="text-center align-content-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-md-2 card">
                        <img src="@item.LogoPath" title="@item.FullName logo" alt="@item.FullName logo" width="50" height="50" />
                        <h6>@item.FullName</h6>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </div>
                }
            }
        </div>
    </div>
</div>