@using SycamoreHockeyLeaguePortal.Data
@model IEnumerable<Season>
@inject ApplicationDbContext _context

@{
    ViewData["Title"] = "Seasons";
    Dictionary<int, DateTime?> firstDaysOfSeasons = ViewBag.FirstDaysOfSeasons;
}

<h1>@ViewBag.Title</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">+ Season</a>
</p>

<div class="container">
    <div class="row d-flex justify-content-center">
        @foreach (var season in Model)
        {
            <div class="col-2 card text-center align-content-center">
                <h4>@season.Year</h4>
                <p class="text-secondary">@season.GamesPerTeam games</p>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            @if (firstDaysOfSeasons[season.Year] != null) {
                                <a class="text-primary" asp-controller="Schedule" asp-action="Index" asp-route-weekOf="@firstDaysOfSeasons[season.Year]">Schedule</a>
                            }
                            else {
                                <a class="text-primary" href="#">Upload Schedule</a>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <a class="text-primary" asp-controller="Standings" asp-action="Index" asp-route-season="@season.Year" asp-route-viewBy="division">Schedule</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <a class="text-primary" asp-controller="Schedule" asp-action="Index" asp-route-weekOf="@DateTime.Now.ToShortDateString()">Schedule</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>