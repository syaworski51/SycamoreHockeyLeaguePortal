<table class="table h2h-stats">
    <thead>
        <tr>
            <th class="team">
                <img class="h2h-logo" src="~/@team1.Team.LogoPath" width="150" height="150" /><br />
                @team1.Team
            </th>
            <th>Metric</th>
            <th class="team">
                <img class="h2h-logo" src="~/@team2.Team.LogoPath" width="150" height="150" /><br />
                @team2.Team
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@h2hSeries[TEAM1]</td>
            <th>SERIES</th>
            <td>@h2hSeries[TEAM2]</td>
        </tr>
        <tr>
            <td>@h2hWinPoints[TEAM1]</td>
            <th>WIN POINTS</th>
            <td>@h2hWinPoints[TEAM2]</td>
        </tr>
        <tr>
            <td>@h2hGoalsFor[TEAM1]</td>
            <th>GOALS FOR</th>
            <td>@h2hGoalsFor[TEAM2]</td>
        </tr>
        <tr>
            <td>@h2hGFInWins[TEAM1]</td>
            <th>GF IN WINS</th>
            <td>@h2hGFInWins[TEAM2]</td>
        </tr>
        <tr>
            <td>@string.Format("{0:F2}", h2hGFPerGame[TEAM1])</td>
            <th>GF / GAME</th>
            <td>@string.Format("{0:F2}", h2hGFPerGame[TEAM2])</td>
        </tr>
        <tr>
            <td>@string.Format("{0:F2}", h2hGAPerGame[TEAM1])</td>
            <th>GA / GAME</th>
            <td>@string.Format("{0:F2}", h2hGAPerGame[TEAM2])</td>
        </tr>
    </tbody>
</table>