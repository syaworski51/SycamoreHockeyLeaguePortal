@{
    ViewData["Title"] = "Head-to-Head Comparison";

    Standings team1 = ViewBag.Team1;
    Standings team2 = ViewBag.Team2;

    const int TEAM1 = 0;
    const int TEAM2 = 1;

    int[] h2hSeries = ViewBag.H2HSeries;
    int[] h2hGoalsFor = ViewBag.H2HGoalsFor;
    int[] h2hGFInWins = ViewBag.H2HGFInWins;
    int[] h2hWinPoints = ViewBag.H2HWinPoints;
    double[] h2hGFPerGame = ViewBag.H2HGFPerGame;
    double[] h2hGAPerGame = ViewBag.H2HGAPerGame;
}

<h1>@ViewBag.Title</h1>

