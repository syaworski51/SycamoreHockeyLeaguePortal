@model PlayoffSeries

@{
    string roundString = ViewBag.RoundString;
    ViewData["Title"] = $"{Model.Team1.FullName} vs. {Model.Team2.FullName} - {roundString}";
}

<div class="container game">
    <div class="row">
        <div class="col-12" style="font-size: 14pt;">
            @roundString
        </div>
    </div>
    <div class="row">
        <div class="col-3 away-team">
            <h5>@Model.Team1.City</h5>
            <h1 class="team-name">@Model.Team1.Name</h1>
        </div>
        <div class="col-2 team-logo">
            <img class="logo" src="~/@Model.Team1.LogoPath" alt="@Model.Team1.Code" />
        </div>
        <div class="col score">
            @Model.Team1Wins
        </div>
        <div class="col score">
            @Model.Team2Wins
        </div>
        <div class="col-2 team-logo">
            <img class="logo" src="~/@Model.Team2.LogoPath" alt="@Model.Team2.Code" />
        </div>
        <div class="col-3 home-team">
            <h5>@Model.Team2.City</h5>
            <h1 class="team-name">@Model.Team2.Name</h1>
        </div>
    </div>
</div>

<partial name="Layouts/PlayoffSeries.cshtml" />