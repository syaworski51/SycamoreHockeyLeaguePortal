@model RankedPlayoffSeries

@{
    ViewData["Title"] = "Details";

    List<Schedule> games = ViewBag.Games;
}

<h1>Details</h1>

<div class="container game">
    <div class="row">
        <div class="col-12" style="font-size: 14pt;">
            
        </div>
    </div>
    <div class="row">
        <div class="col-3 away-team">
            <h5>@Model.Matchup.Team1!.City</h5>
            <h1 class="team-name">@Model.Matchup.Team1.Name</h1>
        </div>
        <div class="col-2 team-logo">
            <img class="logo" src="~/@Model.Matchup.Team1.LogoPath" alt="@Model.Matchup.Team1.Code" />
        </div>
        <div class="col score">
            @Model.Matchup.Team1Wins
        </div>
        <div class="col score">
            @Model.Matchup.Team2Wins
        </div>
        <div class="col-2 team-logo">
            <img class="logo" src="~/@Model.Matchup.Team2.LogoPath" alt="@Model.Matchup.Team2.Code" />
        </div>
        <div class="col-3 home-team">
            <h5>@Model.Matchup.Team2.City</h5>
            <h1 class="team-name">@Model.Matchup.Team2.Name</h1>
        </div>
    </div>
</div>

@Html.Partial("../Schedule/Layouts/PlayoffSeries.cshtml", Model.Matchup)

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
</table>